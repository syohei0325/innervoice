# Yohaku Action Cloud - Environment Variables

# Phase
YOHAKU_PHASE=phase1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/yohaku?schema=public

# Planner
PLANNER_MODE=mock
YOHAKU_PLANNER_MODE=mock
# OPENAI_API_KEY=sk-...  # OpenAI使う場合

# Secrets
WEBHOOK_SIGNING_SECRET=your_webhook_signing_secret_here
YOHAKU_SERVER_SECRET=your_server_secret_here

# Dev
DEV_ALLOW_LOCALHOST=true

# Webhook Worker (optional)
WEBHOOK_POLL_INTERVAL_MS=5000
WEBHOOK_MAX_ATTEMPTS=8
WEBHOOK_BATCH_SIZE=10
